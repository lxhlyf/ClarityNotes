<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.afollestad.appthemeenginesample">

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="com.claritynotes.app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_cyq"
        android:roundIcon="@mipmap/ic_launcher_cyq_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.claritynotes.ui.activity.MainActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.claritynotes.TextActivity">

            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <activity
            android:name="com.claritynotes.collapsingtb.CollapsingToolbarActivity"
            android:label="@string/collapsing_toolbar"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/AppTheme.MyActionBar"/>

        <activity
            android:name="com.claritynotes.daily.activity.DailyActivity"
            android:label="@string/rv_sample"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.claritynotes.ui.activity.TabSampleActivity"
            android:label="@string/tabs_sample"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.claritynotes.misc.MiscActivity"
            android:label="@string/misc"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.claritynotes.ui.activity.SettingsActivity"
            android:label="@string/settings"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name="com.claritynotes.ui.activity.WidgetActivity"></activity>

        <activity
            android:name="com.claritynotes.ui.activity.PhraseWordsListDetailActivity"
            android:label="@string/phrase_list"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity android:name="com.claritynotes.ui.activity.SentenceListActivity"
            android:label="@string/great_sentence"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity android:name="com.claritynotes.daily.activity.DailyEditActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity android:name="com.claritynotes.ui.activity.ReadRecordTimeActivity"/>

        <activity android:name="com.claritynotes.ui.activity.ReadRecordDetailActivity"/>

        <activity android:name="com.claritynotes.ui.activity.AboutActivity"
            android:label="@string/about_label"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>
